{
  // See https://github.com/Microsoft/vscode/issues/16320#issuecomment-422750895
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "jsx": "preserve",
      "baseUrl": ".",
      "paths": {
          "components/*": ["./src/client/components/*"],
          "images/*": ["./src/client/images/*"],
          "layouts/*": ["./src/client/layouts/*"],
          "pages/*": ["./src/client/pages/*"],
          "@config": ["./src/client/config.js"],
          "@globals": ["./src/client/globals.js"]
      }
  },
  "exclude": ["node_modules", ".next"]
}